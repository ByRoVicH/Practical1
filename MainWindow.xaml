<Window x:Class="Practical1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Практическая работа 1" Height="240" Width="360" Icon="/joke-svgrepo-com.png">
    <Grid>
        <Menu>
            <MenuItem Header="Меню">
                <MenuItem Header="О программе" Click="About_Click"/>
                <MenuItem Header="Выход" Click="Exit_Click"/>
            </MenuItem>
        </Menu>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Введите кол-во чисел:" Margin="5" Width="180"/>
            <TextBox Name="Input" Width="190" Margin="5"/>
            <Button Name="Calculate" Content="Вычислить сумму" Click="Calculate_Click" Margin="5"/>
            <TextBlock Name="Result" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
